   "source": [
    "import aiml\n",
    "kernel = aiml.Kernel()\n",
    "kernel.learn(\"bot.aiml\")\n",
    "while True:\n",
    "    user_input = input(\"You: \")\n",
    "    if user_input.lower() == 'exit':\n",
    "        print(\"Bot: Goodbye!\")\n",
    "        break\n",
    "\n",
    "    bot_response = kernel.respond(user_input)\n",
    "    print(\"Bot:\", bot_response)\n",
    "    "
